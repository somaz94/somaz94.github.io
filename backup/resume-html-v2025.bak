    <script>
        // PDF 다운로드 함수
        function downloadPDF() {
            // PDF 다운로드 전에 버튼들을 숨김
            const languageToggle = document.querySelector('.language-toggle');
            const careerYears = document.querySelector('#career-years');
            const pdfBtn = document.querySelector('.pdf-download-btn');
            
            const originalLanguageDisplay = languageToggle.style.display;
            const originalCareerDisplay = careerYears.style.display;
            const originalPdfDisplay = pdfBtn.style.display;
            
            languageToggle.style.display = 'none';
            careerYears.style.display = 'none';
            pdfBtn.style.display = 'none';
            
            // 페이지 상단으로 스크롤
            window.scrollTo(0, 0);
            
            // 현재 언어에 따라 파일명 결정
            const currentLang = document.documentElement.lang;
            const filename = currentLang === 'ko' ? '이동형_이력서.pdf' : 'Donghyung_Lee_Resume.pdf';
            
            // PDF 생성을 위한 설정
            const element = document.querySelector('.resume-container');
            const opt = {
                margin: [0.4, 0.4, 0.4, 0.4],
                filename: filename,
                image: { 
                    type: 'jpeg', 
                    quality: 0.98 
                },
                html2canvas: { 
                    scale: 2,
                    useCORS: true,
                    letterRendering: true,
                    allowTaint: false,
                    backgroundColor: '#ffffff',
                    scrollX: 0,
                    scrollY: 0
                },
                jsPDF: { 
                    unit: 'in', 
                    format: 'a4', 
                    orientation: 'portrait',
                    compress: true
                },
                pagebreak: {
                    mode: ['avoid-all', 'css', 'legacy'],
                    before: '.section'
                }
            };
            
            // PDF 생성 후 버튼들을 다시 표시
            html2pdf().set(opt).from(element).save().then(() => {
                languageToggle.style.display = originalLanguageDisplay;
                careerYears.style.display = originalCareerDisplay;
                pdfBtn.style.display = originalPdfDisplay;
            });
        }

        // 경력 계산 함수
        function calculateCareerYears() {
            const experiences = [
                { start: '2022.04', end: '2023.03' }, // 아이오차드
                { start: '2023.03', end: '2024.07' }, // 너디스타
                { start: '2024.10', end: 'current' }  // 팬텀 (현재)
            ];

            let totalMonths = 0;
            const currentDate = new Date();

            experiences.forEach(exp => {
                const startDate = new Date(exp.start.replace('.', '-') + '-01');
                let endDate;
                
                if (exp.end === 'current') {
                    endDate = currentDate;
                } else {
                    endDate = new Date(exp.end.replace('.', '-') + '-01');
                }

                const diffTime = endDate - startDate;
                const diffMonths = Math.floor(diffTime / (1000 * 60 * 60 * 24 * 30.44)); // 평균 월 일수
                totalMonths += diffMonths;
            });

            const years = Math.floor(totalMonths / 12);
            const months = totalMonths % 12;

            return { years, months };
        }

        function updateCareerDisplay() {
            const { years, months } = calculateCareerYears();
            const careerElement = document.getElementById('career-years');
            
            if (document.documentElement.lang === 'ko') {
                careerElement.textContent = `경력 ${years}년 ${months}개월`;
            } else {
                careerElement.textContent = `${years}Y ${months}M Experience`;
            }
        }

        function switchLanguage(lang) {
            // Update button states
            document.querySelectorAll('.lang-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelector(`[onclick="switchLanguage('${lang}')"]`).classList.add('active');

            // Update content with data attributes
            document.querySelectorAll('[data-ko][data-en]').forEach(element => {
                if (lang === 'ko') {
                    element.textContent = element.getAttribute('data-ko');
                } else {
                    element.textContent = element.getAttribute('data-en');
                }
            });

            // Update intro text with HTML content
            const introElement = document.querySelector('.intro-text div');
            if (introElement) {
                if (lang === 'ko') {
                    introElement.innerHTML = introElement.getAttribute('data-ko');
                } else {
                    introElement.innerHTML = introElement.getAttribute('data-en');
                }
            }

            // Update document language
            document.documentElement.lang = lang;
            
            // Update career display
            updateCareerDisplay();
        }

        // Set default language to Korean and initialize career display
        document.addEventListener('DOMContentLoaded', function() {
            switchLanguage('ko');
        });
    </script>
    
